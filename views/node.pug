                            |
                            div
                                .checkbox3.checkbox-inline.checkbox-check.checkbox-light
                                    input#checkbox-fa-light-1(type="checkbox", checked="")
                                    |
                                    label(for="checkbox-fa-light-1")
                                        | Option1
