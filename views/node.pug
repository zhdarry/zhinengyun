                                .checkbox3.checkbox-danger.checkbox-inline.checkbox-check.checkbox-circle.checkbox-light
                                    input#checkbox-fa-light-3(type="checkbox", checked="")
                                    |
                                    label(for="checkbox-fa-light-3")
                                        | Option Circle
                            |
                            div
                                .radio3.radio-check.radio-inline
                                    input#radio4(type="radio", name="radio2", value="option1", checked="")
